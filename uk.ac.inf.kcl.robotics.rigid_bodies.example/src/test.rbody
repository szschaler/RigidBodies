rigid_body MyFirstRobotArm {
	joint shoulder
	joint elbow
	joint wrist
	
	mass upperArm 1.5kg {
		transformation relative to shoulder (
			3.0,  4.0,  5.0;
			6.0,  7.0,  8.0;
			9.0, 10.0, 11.0
		)
		transformation relative to elbow (
			3.0,  4.0,  5.0;
			6.0,  7.0,  8.0;
			9.0, 10.0, 11.0
		)
	}
	
	mass lowerArm 1.0kg {
		transformation relative to shoulder (
			3.0,  4.0,  5.0;
			6.0,  7.0,  8.0;
			9.0, 10.0, 11.0
		)
		transformation relative to elbow (
			3.0,  4.0,  5.0;
			6.0,  7.0,  8.0;
			9.0, 10.0, 11.0
		)
	}
	
	// Because we can :-)
	colocate wrist with shoulder
}